<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
            <div class = "banner">
			<img src="assets/img/burger.png" alt="Eat-Da-Burger App">
	        <h1>Eat Burgers App</h1>
	    </div>
    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">
			<br>
      <h2>Burgers Available To Eat!</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burgers/burger-block devoured=true}}
      {{!-- {{this.burger_name}} --}}
    {{/unless}}
  {{/each}}
</ul>
</div>


	<div class="col-sm-6">
<h2>burgers that are Eaten!</h2>

{{#each burgers}}
    {{#if this.devoured}}
  {{!-- {{burger_name}} --}}

	  <input class="change-state" data-id="{{this.id}}" type="text" placeholder="{{this.burger_name}}" readonly>
		{{!-- {{#if devoured}}Eat Me!{{else}}I'm Eaten!{{/if}} --}}
  
	</input>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
      {{!-- {{this.burger_name}} --}}
    {{/if}}
  {{/each}}

<ul>
  {{!-- {{#each burgers}}
    {{#if this.devoured}}
      {{> burgers/burger-state devoured=false}}
            {{this.burger_name}}
    {{/if}}
  {{/each}} --}}
</ul>
	    </div>

  	</div>
	<!-- end .row -->

<h2>Add a Burger</h2>
<form class="create-form">
	<div class="row">
	    <div class="center col-sm-12">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  {{!-- <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

  <button type="submit">Add Burger</button>
</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>
